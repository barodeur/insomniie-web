-# encoding: utf-8
!!!
%html
  %head
    %title Insomniie
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to root_path, class: "brand" do
            %i.icon-time
            Insomniie
          %ul.nav
            %li
              = link_to page_path('about') do
                À propos
          %ul.nav.pull-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{"data-no-turbolink" => true, :href => "#"}
                  = avatar_for current_user, :tiny
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to destroy_user_session_path, method: :delete, "data-no-turbolink" => true do
                      Se déconnecter
            - else
              %li
                = link_to user_omniauth_authorize_path(:facebook), "data-no-turbolink" => true do
                  %i.icon-facebook-sign
                  Se connecter avec Facebook
    .container
      .row
        .span12
          - if notice
            .flash.flash-notice
              = notice
          - if alert
            .flash.flash-alert
              = alert
      = yield

    .footer
      .container
        .row
          .span8
          .span4
            .page-header
              %h3
                Suivez-nous sur les réseaux sociaux !
            %p.social-bookmarks
              = link_to '#' do
                %i.icon-facebook.icon-large.circle
              = link_to 'https://twitter.com/InsomnllE' do
                %i.icon-twitter.icon-large.circle

